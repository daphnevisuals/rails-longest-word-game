<h1>longuest word</h1>
<div class="letters">
  <% @letters.each do |letter| %>
    <span class="letter"><%= letter.capitalize %></span>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="input-text" type="text" name="word">
  <input class="input-submit" type="submit" value="Guess!">
</form>
